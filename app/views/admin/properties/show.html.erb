<div class="min-h-screen bg-gray-900">
  <div class="px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <%= link_to admin_root_path, class: "inline-flex items-center text-indigo-400 hover:text-indigo-300 mb-4" do %>
        <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
        </svg>
        Voltar para lista
      <% end %>
    </div>

    <!-- Conteúdo principal -->
    <div class="max-w-7xl mx-auto bg-gray-800 p-8">
      <div class="lg:grid lg:grid-cols-2 lg:items-start lg:gap-x-8">
        
        <!-- Galeria de imagens - ADICIONADO: data-controller="spotlight" -->
        <div class="flex flex-col-reverse" data-controller="spotlight">
          <% if @property.images.attached? %>
            <!-- Hidden links for Spotlight.js gallery -->
            <% if @property.images.count > 4 %>
              <div class="hidden">
                <% @property.images.offset(4).each_with_index do |image, index| %>
                  <a href="<%= url_for(image) %>" 
                     class="spotlight"
                     data-group="property-gallery"
                     data-title="<%= @property.title %> - Imagem <%= index + 5 %>">
                  </a>
                <% end %>
              </div>
            <% end %>

            <!-- Thumbnails -->
            <div class="mx-auto mt-6 hidden w-full max-w-2xl sm:block lg:max-w-none">
              <div class="grid grid-cols-4 gap-6" aria-orientation="horizontal" role="tablist">
                <% @property.images.limit(4).each_with_index do |image, index| %>
                  <!-- ADICIONADO: data-spotlight-thumbnail-target="thumbnail" -->
                  <a href="<%= url_for(image) %>" 
                     class="spotlight relative flex h-24 cursor-pointer items-center justify-center rounded-md bg-gray-800 text-sm font-medium text-gray-300 uppercase hover:bg-gray-700 focus:ring-3 focus:ring-indigo-500/50 focus:ring-offset-4 focus:outline-hidden image-thumb"
                     data-image-url="<%= url_for(image) %>"
                     data-group="property-gallery"
                     data-title="<%= @property.title %> - Imagem <%= index + 1 %>"
                     aria-label="Ver imagem <%= index + 1 %>"
                     data-spotlight-thumbnail-target="thumbnail">
                    <span class="absolute inset-0 overflow-hidden rounded-md">
                      <%= image_tag image, alt: @property.title, class: "size-full object-cover" %>
                    </span>
                    <span class="pointer-events-none absolute inset-0 rounded-md ring-2 ring-transparent ring-offset-2 hover:ring-indigo-500" aria-hidden="true"></span>
                    <% if index == 3 && @property.images.count > 4 %>
                      <div class="absolute inset-0 bg-black bg-opacity-50 rounded-md flex items-center justify-center">
                        <span class="text-white font-bold text-lg">+<%= @property.images.count - 4 %></span>
                      </div>
                    <% end %>
                  </a>
                <% end %>
              </div>
            </div>

            <!-- Main image -->
            <div>
              <div class="main-image-container">
                <!-- ADICIONADO: data-spotlight-main-image-link-target="mainImageLink" -->
                <a href="<%= url_for(@property.images.first) %>" 
                   class="spotlight"
                   data-group="property-gallery"
                   data-title="<%= @property.title %> - Imagem principal"
                   data-spotlight-main-image-link-target="mainImageLink">
                  <!-- ADICIONADO: data-spotlight-main-image-target="mainImage" -->
                  <%= image_tag @property.images.first, 
                      alt: @property.title, 
                      class: "aspect-square w-full object-cover sm:rounded-lg cursor-pointer main-image",
                      id: "mainImage",
                      data: { spotlight_main_image_target: "mainImage" } %>
                </a>
              </div>
            </div>
          <% else %>
            <!-- Placeholder quando não há imagens -->
            <div class="aspect-square w-full bg-gray-800 flex items-center justify-center rounded-lg">
              <div class="text-center">
                <svg class="mx-auto h-16 w-16 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <p class="mt-2 text-sm text-gray-500">Sem imagens disponíveis</p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Informações do imóvel -->
        <div class="mt-10 px-4 sm:mt-16 sm:px-0 lg:mt-0">
          <h1 class="text-3xl font-bold tracking-tight text-white"><%= @property.title %></h1>
          
          <% if @property.featured? %>
            <span class="inline-flex items-center rounded-md bg-yellow-600 px-2 py-1 text-sm font-medium text-yellow-100 ring-1 ring-inset ring-yellow-500/20 mt-2">
              ⭐ DESTAQUE
            </span>
          <% end %>

          <div class="mt-3">
            <h2 class="sr-only">Informações do imóvel</h2>
            <p class="text-3xl tracking-tight text-green-400">
              <%= number_to_currency(@property.price, unit: "R$ ", separator: ",", delimiter: ".") %>
            </p>
          </div>

          <!-- Property Type and Neighborhood -->
          <div class="mt-3 space-y-2">
            <% if @property.property_type.present? %>
              <div class="flex items-center">
                <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h4m0 0V9a2 2 0 012-2h2a2 2 0 012 2v12" />
                </svg>
                <span class="text-sm font-medium text-gray-300"><%= @property.property_type.humanize %></span>
              </div>
            <% end %>
            
            <div class="flex items-center">
              <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span class="text-indigo-300 font-medium"><%= @property.neighborhood.name %></span>
            </div>
          </div>

          <!-- Property Details Grid -->
          <div class="mt-6">
            <h3 class="text-sm font-medium text-white">Características</h3>
            <dl class="mt-3 grid grid-cols-2 gap-4 sm:grid-cols-4">
              <% if @property.bedrooms.present? && @property.bedrooms > 0 %>
                <div class="border-t border-gray-700 pt-4">
                  <dt class="font-medium text-white flex items-center">
                    <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 21l0-12" />
                    </svg>
                    Quartos
                  </dt>
                  <dd class="mt-1 text-sm text-gray-400"><%= @property.bedrooms %></dd>
                </div>
              <% end %>
              
              <% if @property.bathrooms.present? && @property.bathrooms > 0 %>
                <div class="border-t border-gray-700 pt-4">
                  <dt class="font-medium text-white flex items-center">
                    <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10v11M20 10v11" />
                    </svg>
                    Banheiros
                  </dt>
                  <dd class="mt-1 text-sm text-gray-400"><%= @property.bathrooms %></dd>
                </div>
              <% end %>
              
              <% if @property.area_m2.present? && @property.area_m2 > 0 %>
                <div class="border-t border-gray-700 pt-4">
                  <dt class="font-medium text-white flex items-center">
                    <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
                    </svg>
                    Área
                  </dt>
                  <dd class="mt-1 text-sm text-gray-400"><%= @property.area_formatted %></dd>
                </div>
              <% end %>
              
              <% if @property.garage_spaces.present? %>
                <div class="border-t border-gray-700 pt-4">
                  <dt class="font-medium text-white flex items-center">
                    <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
                    </svg>
                    Garagem
                  </dt>
                  <dd class="mt-1 text-sm text-gray-400"><%= @property.garage_info %></dd>
                </div>
              <% end %>
            </dl>
          </div>

          <!-- Características especiais -->
          <% if @property.furnished.present? %>
            <div class="mt-6">
              <h3 class="text-sm font-medium text-white">Características Especiais</h3>
              <div class="mt-3">
                <% if @property.furnished? %>
                  <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                    ✓ Mobiliado
                  </span>
                <% else %>
                  <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                    Não mobiliado
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Property Description -->
          <% if @property.description.present? %>
            <div class="mt-6">
              <h3 class="text-sm font-medium text-white">Descrição</h3>
              <div class="mt-3 space-y-6">
                <p class="text-base text-gray-300 whitespace-pre-line"><%= @property.description %></p>
              </div>
            </div>
          <% end %>

          <!-- Status e Ações -->
          <div class="mt-8 space-y-4">
            <div class="flex items-center">
              <span class="text-gray-400 mr-2">Status:</span>
              <% if @property.featured? %>
                <span class="inline-flex items-center rounded-md bg-green-600 px-2 py-1 text-xs font-medium text-green-100">
                  Destaque
                </span>
              <% else %>
                <span class="inline-flex items-center rounded-md bg-red-600 px-2 py-1 text-xs font-medium text-red-100">
                  Simples
                </span>
              <% end %>
            </div>

            <div class="flex space-x-3">
              <%= link_to "Editar", edit_admin_property_path(@property), 
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              
              <%= link_to "Excluir", admin_property_path(@property), 
                  method: :delete,
                  data: { 
                    controller: "confirm-delete",
                    action: "click->confirm-delete#confirm",
                    "confirm-delete-message-value": "Tem certeza que deseja excluir este imóvel? Esta ação não pode ser desfeita."
                  },
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Seção adicional com informações técnicas -->
      <section class="mt-12 pt-12 border-t border-gray-700">
        <h2 class="text-2xl font-bold text-white mb-8">Detalhes Técnicos</h2>
        
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Informações gerais -->
          <div class="bg-gray-700 rounded-lg p-6">
            <h3 class="text-lg font-medium text-white mb-4">Informações Gerais</h3>
            <dl class="space-y-3">
              <div class="flex justify-between">
                <dt class="text-gray-400">ID:</dt>
                <dd class="text-white font-mono">#<%= @property.id %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-400">Criado em:</dt>
                <dd class="text-white"><%= @property.created_at.strftime("%d/%m/%Y") %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-400">Atualizado em:</dt>
                <dd class="text-white"><%= @property.updated_at.strftime("%d/%m/%Y") %></dd>
              </div>
              <% if @property.furnished.present? %>
                <div class="flex justify-between">
                  <dt class="text-gray-400">Mobiliado:</dt>
                  <dd class="text-white"><%= @property.furnished? ? 'Sim' : 'Não' %></dd>
                </div>
              <% end %>
            </dl>
          </div>

          <!-- Imagens -->
          <div class="bg-gray-700 rounded-lg p-6">
            <h3 class="text-lg font-medium text-white mb-4">Imagens</h3>
            <dl class="space-y-3">
              <div class="flex justify-between">
                <dt class="text-gray-400">Total de imagens:</dt>
                <dd class="text-white"><%= @property.images.count %></dd>
              </div>
              <% if @property.images.attached? %>
                <div class="flex justify-between">
                  <dt class="text-gray-400">Primeira imagem:</dt>
                  <dd class="text-white text-sm">
                    <%= @property.images.first&.blob&.filename&.to_s&.truncate(20) %>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>

          <!-- Localização -->
          <div class="bg-gray-700 rounded-lg p-6">
            <h3 class="text-lg font-medium text-white mb-4">Localização</h3>
            <% if @property.neighborhood.present? %>
              <p class="text-gray-300 mb-4"><%= @property.neighborhood.name %></p>
            <% end %>
            
            <!-- Placeholder para mapa -->
            <div class="aspect-video rounded-lg flex items-center justify-center border border-gray-700">
              <div class="text-center">
                <svg class="mx-auto h-16 w-16 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <p class="mt-2 text-lg text-gray-400">Mapa será integrado aqui</p>
                <p class="text-sm text-gray-500"><%= @property.neighborhood.name %></p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Imóveis relacionados - CORRIGIDO: @related_properties -->
      <% if @related_properties.any? %>
        <section class="mt-12 pt-12 border-t border-gray-700">
          <h2 class="text-2xl font-bold text-white mb-8">Outros Imóveis no Bairro</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <% @related_properties.each do |property| %>
              <div class="bg-gray-700 rounded-lg overflow-hidden">
                <% if property.images.attached? %>
                  <div class="aspect-video">
                    <%= image_tag property.images.first, alt: property.title, class: "w-full h-full object-cover" %>
                  </div>
                <% else %>
                  <div class="aspect-video bg-gray-600 flex items-center justify-center">
                    <svg class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                <% end %>
                <div class="p-4">
                  <h3 class="text-white font-medium truncate"><%= property.title %></h3>
                  <p class="text-green-400 font-bold mt-1">
                    <%= number_to_currency(property.price, unit: "R$ ", separator: ",", delimiter: ".") %>
                  </p>
                  <div class="mt-3">
                    <%= link_to "Ver Detalhes", admin_property_path(property), 
                        class: "inline-flex items-center px-3 py-1 text-sm bg-indigo-600 text-white rounded hover:bg-indigo-700" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </section>
      <% end %>
    </div>
  </div>
</div>

<!-- REMOVIDO: Todo o script inline que conflitava com Turbo -->
<script>
  if (typeof Spotlight === 'undefined') {
    const script = document.createElement('script');
    script.src = 'https://rawcdn.githack.com/nextapps-de/spotlight/0.7.8/dist/js/spotlight.min.js';
    script.onload = function() {
      Spotlight.init({
        fit: 'contain',
        animation: 'slide',
        theme: 'dark',
        control: ['zoom', 'rotate', 'close'],
        keyboard: true,
        spinner: true,
        title: true,
        description: false,
        counter: true,
        progress: true,
        autohide: true,
        infinite: true
      });
    };
    document.head.appendChild(script);
  } else {
    Spotlight.init({...}); // mesma config
  }
</script>